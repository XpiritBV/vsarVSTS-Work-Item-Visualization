{
  "manifestVersion": 1,
  "id": "almrangers-vsoextensions-WorkitemVisualization",
  "version": "1.1.0",
  "name": "Workitem Visualization",
  "description": "Visualize relationships between work items from within the work item form.",
  "publisher": "alm-rangers-taavik",
  "scopes": [ "vso.work", "vso.code", "vso.test", "vso.profile" ],
  "icons": {
    "wide": "images/WitVizWideIcon.png",
    "default": "images/WitVizShortIcon.png"
  },
  "categories": [
    "Plan and Track"
  ],
  "screenshots": [
    {
      "path": "screenshots/screen1.png"
    },
    {
      "path": "screenshots/screen2.png"
    }
  ],
   "links": {
    "home": {
        "uri": "http://aka.ms/vsoext10"
    },
    "support": {
        "uri": "http://aka.ms/vsarcontact"
    },
    "issues": {
        "uri": "http://aka.ms/vsoext10"
    }
  },
  "branding": {
    "color": "rgb(220, 235, 252)",
    "theme": "light"
  },
  "contributions": [
    {
      "id": "work-item-visualization-dialog",
      "type": "ms.vss-web.control",
      "targets": [ ".controls" ],
      "properties": {
        "uri": "WorkitemVisualization.html"
      }
    },
    {
      "id": "visualize-work-item-button",
      "type": "ms.vss-web.action",
      "description": "Visualize work item",
      "targets": [
        "ms.vss-work-web.work-item-toolbar-menu"
      ],
      "properties": {
        "text": "Visualize",
        "title": "Visualize this workitem",
        "toolbarText": "Visualize",
        "icon": "images/treeviz_short_icon_16x16.png",
        "group": "actions",
        "uri": "VisualizeWitButton.html",
        "registeredObjectId": "visualize-work-item-button"
      }
    },
    {
      "id": "work-item-visualization-find-wit-dialog",
      "type": "ms.vss-web.control",
      "targets": [ ".controls" ],
      "properties": {
        "uri": "findWitDialog.html"
      }
    },
    {
      "id": "work-item-visualization-add-edit-highlight-dialog",
      "type": "ms.vss-web.control",
      "targets": [ ".controls" ],
      "properties": {
        "uri": "addEditHighlightDialog.html"
      }
    }
  ],
  "content": {
    "license": {
      "path": "licence.txt"
    }
  },
  "files": [
    {
      "path": "css",
      "addressable": true
    },
    {
      "path": "images",
      "addressable": true
    },
    {
      "path": "scripts",
      "addressable": true
    },
    {
      "path": "sdk",
      "addressable": true
    },
    {
      "path": "addedithighlightDialog.html",
      "addressable": true
    },
    {
      "path": "findWitDialog.html",
      "addressable": true
    },
    {
      "path": "VisualizeWitButton.html",
      "addressable": true
    },
    {
      "path": "WorkitemVisualization.html",
      "addressable": true
    },
    {
      "path": "ThirdPartyNotice.txt", 
      "addressable":  true
    }
  ]
}
